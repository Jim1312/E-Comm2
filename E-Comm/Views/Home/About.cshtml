@{
    ViewData["Title"] = "About Us - 3B1G";
}

<!-- Hero Section -->
<div class="bg-gradient text-white py-5 mb-5" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
    <div class="container">
        <div class="row justify-content-center text-center">
            <div class="col-lg-8">
                <h1 class="display-4 fw-bold mb-4">About 3B1G</h1>
                <p class="lead">Your trusted partner in entertainment since day one</p>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <!-- Company Story -->
    <div class="row mb-5">
        <div class="col-lg-8 mx-auto">
            <div class="text-center mb-4">
                <h2 class="fw-bold">Our Story</h2>
            </div>
            <p class="lead text-center mb-4">
                3B1G was founded with a simple mission: to provide the best selection of books, movies, and games 
                to entertainment enthusiasts around the world.
            </p>
            <p class="text-muted text-center">
                What started as a small passion project has grown into a comprehensive entertainment platform, 
                serving thousands of customers who trust us for their entertainment needs. We believe that great 
                stories, whether in books, films, or games, have the power to inspire, educate, and bring people together.
            </p>
        </div>
    </div>

    <!-- Features -->
    <div class="row mb-5">
        <div class="col-12 text-center mb-4">
            <h2 class="fw-bold">Why Choose 3B1G?</h2>
            <p class="text-muted">We're committed to providing the best entertainment experience</p>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card h-100 border-0 shadow-sm text-center">
                <div class="card-body p-4">
                    <div class="feature-icon bg-primary bg-gradient text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                        <i class="fas fa-star fa-lg"></i>
                    </div>
                    <h5 class="card-title">Quality Selection</h5>
                    <p class="card-text text-muted">Carefully curated collection of the best books, movies, and games from top publishers and studios.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card h-100 border-0 shadow-sm text-center">
                <div class="card-body p-4">
                    <div class="feature-icon bg-success bg-gradient text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                        <i class="fas fa-shipping-fast fa-lg"></i>
                    </div>
                    <h5 class="card-title">Fast Delivery</h5>
                    <p class="card-text text-muted">Quick and reliable shipping to get your entertainment fix delivered right to your door.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card h-100 border-0 shadow-sm text-center">
                <div class="card-body p-4">
                    <div class="feature-icon bg-warning bg-gradient text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                        <i class="fas fa-headset fa-lg"></i>
                    </div>
                    <h5 class="card-title">Customer Support</h5>
                    <p class="card-text text-muted">Dedicated support team ready to help you find the perfect entertainment for your needs.</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Statistics -->
    <div class="bg-light rounded p-5 mb-5">
        <div class="row text-center">
            <div class="col-md-3 mb-4">
                <div class="h2 fw-bold text-primary mb-2">10K+</div>
                <p class="text-muted mb-0">Happy Customers</p>
            </div>
            <div class="col-md-3 mb-4">
                <div class="h2 fw-bold text-success mb-2">50K+</div>
                <p class="text-muted mb-0">Products Available</p>
            </div>
            <div class="col-md-3 mb-4">
                <div class="h2 fw-bold text-warning mb-2">5</div>
                <p class="text-muted mb-0">Years of Excellence</p>
            </div>
            <div class="col-md-3 mb-4">
                <div class="h2 fw-bold text-info mb-2">24/7</div>
                <p class="text-muted mb-0">Customer Support</p>
            </div>
        </div>
    </div>

    <!-- Mission & Values -->
    <div class="row mb-5">
        <div class="col-lg-6 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center mb-3">
                        <div class="feature-icon bg-primary bg-gradient text-white rounded-circle d-inline-flex align-items-center justify-content-center me-3" style="width: 50px; height: 50px;">
                            <i class="fas fa-bullseye"></i>
                        </div>
                        <h4 class="mb-0">Our Mission</h4>
                    </div>
                    <p class="text-muted mb-0">
                        To make quality entertainment accessible to everyone by providing a comprehensive platform 
                        where customers can discover, explore, and purchase the books, movies, and games they love.
                    </p>
                </div>
            </div>
        </div>
        <div class="col-lg-6 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center mb-3">
                        <div class="feature-icon bg-success bg-gradient text-white rounded-circle d-inline-flex align-items-center justify-content-center me-3" style="width: 50px; height: 50px;">
                            <i class="fas fa-heart"></i>
                        </div>
                        <h4 class="mb-0">Our Values</h4>
                    </div>
                    <p class="text-muted mb-0">
                        Quality, integrity, and customer satisfaction guide everything we do. We believe in building 
                        lasting relationships with our customers through exceptional service and genuine care.
                    </p>
                </div>
            </div>
        </div>
    </div>

    <!-- Team Section -->
    <div class="row mb-5">
        <div class="col-12 text-center mb-4">
            <h2 class="fw-bold">Our Team</h2>
            <p class="text-muted">Meet the people behind 3B1G</p>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card border-0 shadow-sm text-center">
                <div class="card-body p-4">
                    <div class="bg-primary bg-gradient text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                        <i class="fas fa-user-tie fa-2x"></i>
                    </div>
                    <h5 class="card-title">Management Team</h5>
                    <p class="card-text text-muted">Experienced leaders guiding our vision and strategy.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card border-0 shadow-sm text-center">
                <div class="card-body p-4">
                    <div class="bg-success bg-gradient text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                        <i class="fas fa-users fa-2x"></i>
                    </div>
                    <h5 class="card-title">Customer Service</h5>
                    <p class="card-text text-muted">Dedicated support staff ensuring customer satisfaction.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card border-0 shadow-sm text-center">
                <div class="card-body p-4">
                    <div class="bg-warning bg-gradient text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                        <i class="fas fa-cogs fa-2x"></i>
                    </div>
                    <h5 class="card-title">Technical Team</h5>
                    <p class="card-text text-muted">Skilled developers maintaining our platform.</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Call to Action -->
    <div class="bg-gradient text-white rounded p-5 text-center" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
        <h3 class="fw-bold mb-3">Ready to Explore Our Collection?</h3>
        <p class="lead mb-4">Join thousands of satisfied customers and discover your next favorite book, movie, or game.</p>
        <div class="d-flex gap-3 justify-content-center flex-wrap">
            <a asp-controller="Home" asp-action="Catalog" class="btn btn-light btn-lg">Browse Products</a>
            @if (User.Identity?.IsAuthenticated != true)
            {
                <a asp-controller="Customer" asp-action="CreateAccount" class="btn btn-outline-light btn-lg">Join Now</a>
            }
        </div>
    </div>
</div> 