@{
    ViewData["Title"] = "3B1G - Your Gateway to Books, Movies & Games";
}

<!-- Hero Section -->
<div class="hero-section-animated text-white py-5 mb-5">
    <div class="container position-relative">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold mb-4 hero-title">3B1G</h1>
                <p class="lead mb-4 hero-subtitle">Your ultimate destination for books, movies, and games. Discover, explore, and purchase the latest entertainment content.</p>
                @if (User.Identity?.IsAuthenticated != true)
                {
                    <div class="d-flex gap-3 flex-wrap">
                        <a asp-controller="Auth" asp-action="Login" class="btn btn-hero-primary btn-lg px-4">Get Started</a>
                        <a asp-controller="Home" asp-action="Catalog" class="btn btn-hero-secondary btn-lg px-4">Browse Products</a>
                    </div>
                }
                else
                {
                    <div class="alert alert-hero d-inline-block">
                        <i class="fas fa-user-circle me-2"></i>
                        Welcome back, <strong>@User.Identity.Name</strong>!
                    </div>
                }
            </div>
            <div class="col-lg-6 text-center">
                <div class="hero-icons">
                    <i class="fas fa-book fa-3x text-white-50 me-4"></i>
                    <i class="fas fa-film fa-3x text-white-50 me-4"></i>
                    <i class="fas fa-gamepad fa-3x text-white-50"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Featured Categories -->
<div class="container mb-5">
    <div class="row text-center">
        <div class="col-md-4 mb-4">
            <div class="card h-100 border-0 shadow-sm hover-shadow">
                <div class="card-body p-4">
                    <div class="feature-icon bg-primary bg-gradient text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                        <i class="fas fa-book fa-lg"></i>
                    </div>
                    <h5 class="card-title">Books</h5>
                    <p class="card-text text-muted">Discover amazing stories, educational content, and literary masterpieces from around the world.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card h-100 border-0 shadow-sm hover-shadow">
                <div class="card-body p-4">
                    <div class="feature-icon bg-success bg-gradient text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                        <i class="fas fa-film fa-lg"></i>
                    </div>
                    <h5 class="card-title">Movies</h5>
                    <p class="card-text text-muted">Explore the latest blockbusters, classic films, and indie productions across all genres.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card h-100 border-0 shadow-sm hover-shadow">
                <div class="card-body p-4">
                    <div class="feature-icon bg-warning bg-gradient text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                        <i class="fas fa-gamepad fa-lg"></i>
                    </div>
                    <h5 class="card-title">Games</h5>
                    <p class="card-text text-muted">Find the hottest video games, board games, and interactive entertainment for all ages.</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Featured Products -->
@if (ViewBag.FeaturedProducts != null && ((List<E_Comm.Models.Product>)ViewBag.FeaturedProducts).Any())
{
    <div class="container mb-5">
        <div class="row mb-4">
            <div class="col-12 text-center">
                <h2 class="fw-bold">Featured Products</h2>
                <p class="text-muted">Check out our latest and most popular items</p>
            </div>
        </div>
        <div class="row">
            @foreach (var product in (List<E_Comm.Models.Product>)ViewBag.FeaturedProducts)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card h-100 border-0 shadow-sm hover-shadow product-card">
                        <div class="card-body p-4">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <span class="badge bg-primary">@(product.Genre?.Name ?? "Entertainment")</span>
                                <div class="product-price">
                                    @if (product.Stocktakes?.Any() == true)
                                    {
                                        <span class="fw-bold text-success">$@(product.Stocktakes.First().Price?.ToString("F2") ?? "0.00")</span>
                                    }
                                </div>
                            </div>
                            <h5 class="card-title">@product.Name</h5>
                            @if (!string.IsNullOrEmpty(product.Author))
                            {
                                <p class="text-muted small mb-2">by @product.Author</p>
                            }
                            <p class="card-text text-muted">@(product.Description?.Length > 100 ? product.Description.Substring(0, 100) + "..." : product.Description)</p>
                            <div class="mt-auto">
                                <a asp-controller="Home" asp-action="ProductDetails" asp-route-id="@product.ID" class="btn btn-outline-primary">View Details</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="text-center">
            <a asp-controller="Home" asp-action="Catalog" class="btn btn-primary btn-lg">View All Products</a>
        </div>
    </div>
}

<!-- Call to Action -->
@if (User.Identity?.IsAuthenticated != true)
{
    <div class="bg-light py-5">
        <div class="container text-center">
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <h2 class="fw-bold mb-3">Ready to Start Your Entertainment Journey?</h2>
                    <p class="lead text-muted mb-4">Join thousands of satisfied customers who trust 3B1G for their entertainment needs.</p>
                    <div class="d-flex gap-3 justify-content-center flex-wrap">
                        <a asp-controller="Customer" asp-action="CreateAccount" class="btn btn-primary btn-lg">Create Account</a>
                        <a asp-controller="Auth" asp-action="Login" class="btn btn-outline-primary btn-lg">Sign In</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}